{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "clojure-mcp": {
      "type": "local",
      "command": [
        "clojure",
        "-Sdeps",
        "{:deps {com.bhauman/clojure-mcp {:git/url \"https://github.com/bhauman/clojure-mcp.git\" :git/tag \"v0.1.10-alpha\" :git/sha \"8bd96c3\"} org.slf4j/slf4j-nop {:mvn/version \"2.0.16\"}}}",
        "-X",
        "clojure-mcp.main/start-mcp-server",
        ":port",
        "7999"
      ],
      "enabled": true,
    },
    "playwright": {
      "type": "local",
      "command": [
        "podman",
        "run",
        "-i",
        "--rm",
        "--init",
        "--pull=always",
        "mcr.microsoft.com/playwright/mcp"
      ]
    }
  },
  "agent": {
    "qa": {
      "description": "uses playwright to check functionality and aesthetics in a browser",
      "model": "anthropic/claude-sonnet-4-5-20250929",
      "prompt": "{file:./prompts/qa.md}"
    }
  }
}
